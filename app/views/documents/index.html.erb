<h1>Listing documents</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Document type</th>
    <th>Revision number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= link_to 'Project details', document.project %></td>
    <td><%= document.doc_type %></td>
    <td><%= document.revision_number %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Document', new_document_path, class: "tiny button radius" %>
