<%= form_for(@legal_contract) do |f| %>
    <% if @legal_contract.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@legal_contract.errors.count, "error") %> prohibited this legal_contract from being
            saved:</h2>

          <ul>
            <% @legal_contract.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :project_client, class: "right inline" %>
      </div>
      <div class="small-9 columns">
        <%= f.collection_select(:project_id, Perpetuity[Project].all.to_a, :id, :project_client, {include_blank: true, :data => {:placeholder => "Select project"}}, {:class => "chosen-select", :tabindex => "-1", :style => "width:350px;", }) %>
      </div>
    </div>


    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :signed_on, class: "right inline", title: "Contract signing date", data: {tooltip: true} %>
      </div>
      <div class="small-7 columns left">
        <div class="date">
          <%= f.text_field :signed_on %>
        </div>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :revised_on, class: "right inline"  %>
      </div>
      <div class="small-7 columns left">
        <div class="date">
          <%= f.text_field :revised_on, class: "right inline" %>
        </div>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :copy_stored, class: "right inline"  %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :copy_stored %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-9 small-offset-3 columns">
        <%= f.submit %>
      </div>
    </div>
<% end %>
