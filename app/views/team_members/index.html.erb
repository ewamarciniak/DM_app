<h1>Listing team members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone number</th>
    <th>Email</th>
    <th>Company</th>
    <th>Team</th>
    <th>Experience level</th>
    <th>Qualification</th>
    <th>Lead</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @team_members.each do |team_member| %>
  <tr>
    <td><%= name(team_member.person)%></td>
    <td><%= team_member.person.phone_number %></td>
    <td><%= team_member.person.email %></td>
    <td><%= team_member.person.company.company_name %></td>
    <td><%= team_member.team %></td>
    <td><%= team_member.experience_level %></td>
    <td><%= team_member.qualification %></td>
    <td><%= is_a_lead?(team_member) %></td>
    <td><%= link_to 'Show', team_member %></td>
    <td><%= link_to 'Edit', edit_team_member_path(team_member) %></td>
    <td><%= link_to 'Destroy', team_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team Member', new_team_member_path, class: "tiny button radius"  %>
