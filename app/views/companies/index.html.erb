<h1>Listing companies</h1>

<table>
  <tr>
    <th>Company name</th>
    <th>Reg number</th>
    <th>Phone number</th>
    <th>Fax number</th>
    <th>Address</th>
    <th>People</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.company_name %></td>
    <td><%= company.reg_number %></td>
    <td><%= company.phone_number %></td>
    <td><%= company.fax_number %></td>
    <td><%= link_to "Address details", company.address %> </td>
    <% if team_members_present?(company) %>
        <td><%= link_to "Employees", team_members_path %></td>
    <% elsif is_client?(company) %>
        <td><%= link_to "Client details", company_client(company.id) %></td>
    <% else %>
        <td><%= link_to "Add Client", new_client_path %></td>
        |
        <td><%= link_to "Add Team Member", new_team_member_path %></td>
    <% end %>

    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Company', new_company_path, class: "tiny button radius" %>
