<%= form_for(@company) do |f| %>
    <% if @company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

          <ul>
            <% @company.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :company_name, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :company_name %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :reg_number, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :reg_number %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :phone_number, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :phone_number %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :fax_number, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :fax_number %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :address, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.collection_select(:address_id, Address.all, :id, :full_address, {include_blank: true, :data => {:placeholder => "Select address"}}, {:class => "chosen-select", :tabindex => "-1", :style => "width:350px;", }) %>

      </div>
    </div>

    <div class="row collapse">
      <div class="small-9 small-offset-3 columns">
        <%= f.submit %>
      </div>
    </div>
<% end %>
