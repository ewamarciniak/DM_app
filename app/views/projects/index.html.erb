<h1>Listing projects</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Budget</th>
    <th>Delivery deadline</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= link_to "#{name(project.client.person)}/ #{project.client.person.company.company_name}",  project.client %></td>
    <td><%= project.budget %></td>
    <td><%= project.delivery_deadline %></td>
    <td><%= project.status %></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path, class: "tiny button radius" %>
