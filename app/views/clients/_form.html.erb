<%= form_for(@client) do |f| %>
    <% if @client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

          <ul>
            <% @client.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.fields_for :person do |ff| %>
        <div class="row collapse">
          <div class="small-3 columns">
            <%= ff.label :first_name, class: "right inline" %>
          </div>
          <div class="small-7 columns left">
            <%= ff.text_field :first_name, :placeholder => "(optional)" %>
          </div>
        </div>
        <div class="row collapse">
          <div class="small-3 columns">
            <%= ff.label :last_name, class: "right inline" %>
          </div>
          <div class="small-7 columns left">
            <%= ff.text_field :last_name, :placeholder => "(optional)" %>
          </div>
        </div>
        <div class="row collapse">
          <div class="small-3 columns">
            <%= ff.label :phone_number, class: "right inline" %>
          </div>
          <div class="small-7 columns left">
            <%= ff.text_field :phone_number, :placeholder => "(optional)" %>
          </div>
        </div>
        <div class="row collapse">
          <div class="small-3 columns">
            <%= ff.label :email, class: "right inline" %>
          </div>
          <div class="small-7 columns left">
            <%= ff.text_field :email, :placeholder => "(optional)" %>
          </div>
        </div>
        <div class="row collapse">
          <div class="small-3 columns">
            <%= ff.label :company, class: "right inline" %>
          </div>
          <div class="small-7 columns left">
            <%= ff.collection_select(:company_id, Company.all, :id, :company_name, {include_blank: true, :data => {:placeholder => "Select company"}}, {:class => "chosen-select", :tabindex => "-1", :style => "width:350px;", :placeholder => "(optional)" }) %>
          </div>
        </div>
    <% end %>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :pref_method_of_contact, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :pref_method_of_contact %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :pref_hours_of_contact, class: "right inline" %>
      </div>
      <div class="small-7 columns left">
        <%= f.text_field :pref_hours_of_contact %>
      </div>
    </div>
    <div class="row collapse">
      <div class="small-9 small-offset-3 columns">
        <%= f.submit %>
      </div>
    </div>
<% end %>
